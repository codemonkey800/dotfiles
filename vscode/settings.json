{
  "files.associations": {
    "*.vim": "vimrc"
  },

  "tailwindcss.hoverColorHint": "hex",

  "git.mergeEditor": false,
  "search.showLineNumbers": true,
  "search.smartCase": true,
  "search.sortOrder": "fileNames",
  "editor.fontFamily": "'Hack Nerd Font Mono', 'Hack', monospace",
  "editor.fontSize": 14,
  "editor.formatOnPaste": true,
  "editor.minimap.enabled": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.tabSize": 2,
  "editor.formatOnSave": true,
  "editor.detectIndentation": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },

  "prettier.arrowParens": "avoid",
  "prettier.singleQuote": true,
  "prettier.semi": false,

  "emmet.showAbbreviationSuggestions": false,
  "emmet.showSuggestionsAsSnippets": false,
  "emmet.showExpandedAbbreviation": "never",

  "extensions.autoUpdate": true,

  "files.exclude": {
    "node_modules": true
  },
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,

  "search.quickOpen.includeHistory": false,
  "workbench.startupEditor": "newUntitledFile",
  "explorer.confirmDragAndDrop": false,
  "breadcrumbs.enabled": true,
  "git.confirmSync": false,

  "python.languageServer": "Pylance",
  "python.analysis.typeCheckingMode": "off",

  "scss.validate": false,
  "editor.quickSuggestions": {
    "strings": true
  },
  "editor.autoClosingQuotes": "always",

  // Formatter settings

  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "gitlens.advanced.messages": {
    "suppressCommitNotFoundWarning": true,
    "suppressGitMissingWarning": true,
    "suppressShowKeyBindingsNotice": true
  },

  "vim.easymotion": true,
  "vim.easymotionMarkerBackgroundColor": "#212121",
  "vim.easymotionMarkerForegroundColorOneChar": "#ff0",
  "vim.enableNeovim": false,
  "vim.hlsearch": true,
  "vim.leader": ",",
  "vim.showcmd": false,
  "vim.sneak": true,
  "vim.surround": true,
  "vim.useSystemClipboard": true,

  "vim.handleKeys": {
    "<C-f>": false,
    "<C-n>": false
  },
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["j"],
      "after": ["g", "j"]
    },
    {
      "before": ["k"],
      "after": ["g", "k"]
    },

    {
      "before": ["o"],
      "after": ["o", "<Esc>", "k"]
    },
    {
      "before": ["O"],
      "after": ["O", "<Esc>"]
    },

    {
      "before": ["H"],
      "after": ["0"]
    },
    {
      "before": ["L"],
      "after": ["$"]
    },

    {
      "before": ["u"],
      "commands": ["undo"]
    },
    {
      "before": ["U"],
      "commands": ["redo"]
    },

    {
      "before": ["q"],
      "commands": [":quit"]
    },
    {
      "before": ["Q"],
      "commands": [":quit!"]
    },

    {
      "before": ["Y"],
      "commands": ["copyRelativeFilePath"]
    },

    {
      "before": ["g", "r"],
      "commands": ["editor.action.referenceSearch.trigger"]
    },

    {
      "before": ["<leader>", "k"],
      "commands": ["workbench.action.keepEditor"]
    },

    {
      "before": ["g", "o"],
      "commands": ["editor.action.openLink"]
    },

    {
      "before": ["<leader>", "f"],
      "commands": ["editor.action.formatDocument"]
    },

    {
      "before": ["<leader>", "r"],
      "commands": [
        "eslint.restart",
        "typescript.restartTsServer",
        "stylelint.restart"
      ]
    },

    {
      "before": ["<leader>", "t"],
      "commands": [
        {
          "command": "editor.emmet.action.matchTag"
        }
      ]
    },

    {
      "before": ["<leader>", "m"],
      "commands": ["bookmarks.toggle"]
    },
    {
      "before": ["<leader>", "b"],
      "commands": ["bookmarks.list"]
    },
    {
      "before": ["<leader>", "B"],
      "commands": ["bookmarks.listFromAllFiles"]
    },

    {
      "before": ["<leader>", "p"],
      "commands": ["workbench.panel.chatSidebar.copilot"]
    },
    {
      "before": ["<leader>", "d"],
      "commands": ["figma.views.files.focus"]
    },
    {
      "before": ["<leader>", "t"],
      "commands": ["editor.emmet.action.matchTag"]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["j"],
      "after": ["g", "j"]
    },
    {
      "before": ["k"],
      "after": ["g", "k"]
    },

    {
      "before": ["H"],
      "after": ["0"]
    },
    {
      "before": ["L"],
      "after": ["$"]
    },

    {
      "before": ["g", "a"],
      "commands": ["extension.align", "extension.vim_escape"]
    },

    {
      "before": ["<leader>", "s", "d"],
      "commands": ["editor.action.sortLinesDescending"]
    },
    {
      "before": ["<leader>", "s", "a"],
      "commands": ["editor.action.sortLinesAscending"]
    },

    {
      "before": ["<leader>", "g", "s"],
      "commands": ["git.stageSelectedRanges"]
    },
    {
      "before": ["<leader>", "g", "u"],
      "commands": ["git.unstageSelectedRanges"]
    },
    {
      "before": ["<leader>", "g", "r"],
      "commands": ["git.revertSelectedRanges"]
    },
    {
      "before": ["<leader>", "t"],
      "commands": ["editor.emmet.action.matchTag"]
    }
  ],

  "vim.insertModeKeyBindingsNonRecursive": [
    {
      "before": ["j", "k"],
      "after": ["<Esc>"]
    }
  ],
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },
  "typescript.updateImportsOnFileMove.enabled": "always",
  "diffEditor.ignoreTrimWhitespace": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "explorer.confirmDelete": false,
  "editor.cursorStyle": "line",
  "editor.insertSpaces": true,
  "editor.lineNumbers": "on",
  "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
  "editor.wordWrap": "off",
  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  },
  "markdown-preview-enhanced.scrollSync": true,
  "editor.guides.indentation": false,
  "githubPullRequests.pullBranch": "never",
  "[python]": {
    "editor.formatOnType": true,
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "[feature]": {
    "editor.defaultFormatter": "alexkrechik.cucumberautocomplete"
  },
  "editor.inlineSuggest.enabled": true,
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma"
  },
  "figma.autocompleteBlocks": true,
  "window.zoomLevel": 1,
  "svelte.enable-ts-plugin": true,
  "[svelte]": {
    "editor.defaultFormatter": "svelte.svelte-vscode"
  },
  "errorLens.enabled": true,
  "gitlens.mode.active": "review",
  "github.copilot.editor.enableAutoCompletions": true,
  "prisma.showPrismaDataPlatformNotification": false,
  "security.promptForLocalFileProtocolHandling": false,
  "workbench.colorTheme": "One Dark Pro Night Flat",
  "workbench.iconTheme": "material-icon-theme",
  "tailwindCSS.classAttributes": [
    "class",
    "className",
    "ngClass",
    "class:list",
    "classes",
    "classNames"
  ],
  "[zmodel]": {
    "editor.defaultFormatter": "zenstack.zenstack"
  },
  "tailwindCSS.classFunctions": ["cva", "cns"],
  "typescript.preferences.preferTypeOnlyAutoImports": true,
  "eslint.run": "onSave",
  "github.copilot.chat.codesearch.enabled": true,
  "github.copilot.chat.agent.thinkingTool": true,
  "github.copilot.chat.editor.temporalContext.enabled": true,
  "github.copilot.chat.edits.temporalContext.enabled": true,
  "github.copilot.chat.completionContext.typescript.mode": "on",
  "github.copilot.chat.languageContext.fix.typescript.enabled": true,
  "github.copilot.chat.languageContext.inline.typescript.enabled": true,
  "github.copilot.chat.languageContext.typescript.enabled": true,
  "github.copilot.chat.search.keywordSuggestions": true,
  "gitlens.rebaseEditor.ordering": "asc",
  "github.copilot.nextEditSuggestions.enabled": true,
  "terminal.integrated.defaultProfile.osx": "fish",
  "markdown-preview-enhanced.revealjsTheme": "black.css",
  "markdown-preview-enhanced.previewTheme": "monokai.css"
}
