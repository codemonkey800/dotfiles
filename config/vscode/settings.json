{
  "editor.fontFamily": "'Hack Nerd Font Mono', 'Hack', monospace",
  "editor.fontSize": 14,
  "editor.formatOnPaste": true,
  "editor.minimap.enabled": true,
  "editor.renderIndentGuides": false,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.tabSize": 2,
  "editor.formatOnSave": true,
  "editor.detectIndentation": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },

  "prettier.arrowParens": "avoid",
  "prettier.singleQuote": true,
  "prettier.semi": false,

  "emmet.showAbbreviationSuggestions": false,
  "emmet.showSuggestionsAsSnippets": false,
  "emmet.showExpandedAbbreviation": "never",

  "extensions.autoUpdate": true,

  "files.exclude": {
    "node_modules": true
  },
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,

  "search.quickOpen.includeHistory": false,

  "workbench.colorTheme": "Material Theme Darker",
  "workbench.iconTheme": "eq-material-theme-icons",
  "workbench.startupEditor": "newUntitledFile",
  "explorer.confirmDragAndDrop": false,
  "breadcrumbs.enabled": true,
  "git.confirmSync": false,

  "python.languageServer": "Pylance",
  "python.analysis.typeCheckingMode": "off",

  "scss.validate": false,
  "editor.quickSuggestions": {
    "strings": true
  },
  "editor.autoClosingQuotes": "always",

  // Formatter settings

  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[svelte]": {
    "editor.defaultFormatter": "svelte.svelte-vscode"
  },

  // Extension settings

  "markdown-preview-enhanced.breakOnSingleNewLine": false,

  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "vue",
    "svelte"
  ],

  "gitlens.advanced.messages": {
    "suppressCommitNotFoundWarning": true,
    "suppressGitMissingWarning": true,
    "suppressShowKeyBindingsNotice": true
  },

  "vetur.experimental.templateInterpolationService": false,
  "vetur.useWorkspaceDependencies": true,

  "vim.easymotion": true,
  "vim.easymotionMarkerBackgroundColor": "#212121",
  "vim.easymotionMarkerForegroundColorOneChar": "#ff0",
  "vim.enableNeovim": false,
  "vim.hlsearch": true,
  "vim.leader": ",",
  "vim.showcmd": false,
  "vim.sneak": true,
  "vim.surround": true,
  "vim.useSystemClipboard": true,

  "vim.handleKeys": {
    "<C-f>": false,
    "<C-n>": false
  },
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["j"],
      "after": ["g", "j"]
    },
    {
      "before": ["k"],
      "after": ["g", "k"]
    },

    {
      "before": ["o"],
      "after": ["o", "<Esc>", "k"]
    },
    {
      "before": ["O"],
      "after": ["O", "<Esc>"]
    },

    {
      "before": ["H"],
      "after": ["0"]
    },
    {
      "before": ["L"],
      "after": ["$"]
    },

    {
      "before": ["u"],
      "commands": [{ "command": "undo" }]
    },
    {
      "before": ["U"],
      "commands": [{ "command": "redo" }]
    },

    {
      "before": ["q"],
      "commands": [{ "command": ":quit" }]
    },
    {
      "before": ["Q"],
      "commands": [{ "command": ":quit!" }]
    },

    {
      "before": ["Y"],
      "commands": [{ "command": "copyRelativeFilePath" }]
    },

    {
      "before": ["g", "r"],
      "commands": [{ "command": "editor.action.referenceSearch.trigger" }]
    },

    {
      "before": ["<leader>", "k"],
      "commands": [{ "command": "workbench.action.keepEditor" }]
    },

    {
      "before": ["g", "o"],
      "commands": [{ "command": "editor.action.openLink" }]
    },

    {
      "before": ["<leader>", "f"],
      "commands": [{ "command": "editor.action.formatDocument" }]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["j"],
      "after": ["g", "j"]
    },
    {
      "before": ["k"],
      "after": ["g", "k"]
    },

    {
      "before": ["H"],
      "after": ["0"]
    },
    {
      "before": ["L"],
      "after": ["$"]
    },

    {
      "before": ["g", "a"],
      "commands": [
        { "command": "extension.align" },
        { "command": "extension.vim_escape" }
      ]
    },

    {
      "before": ["<leader>", "s", "d"],
      "commands": [{ "command": "editor.action.sortLinesDescending" }]
    },
    {
      "before": ["<leader>", "s", "a"],
      "commands": [{ "command": "editor.action.sortLinesAscending" }]
    },

    {
      "before": ["<leader>", "g", "s"],
      "commands": [{ "command": "git.stageSelectedRanges" }]
    },
    {
      "before": ["<leader>", "g", "u"],
      "commands": [{ "command": "git.unstageSelectedRanges" }]
    },
    {
      "before": ["<leader>", "g", "r"],
      "commands": [{ "command": "git.revertSelectedRanges" }]
    }
  ],

  "vim.insertModeKeyBindingsNonRecursive": [
    {
      "before": ["j", "k"],
      "after": ["<Esc>"]
    }
  ],
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },
  "typescript.updateImportsOnFileMove.enabled": "always",
  "diffEditor.ignoreTrimWhitespace": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "explorer.confirmDelete": false,
  "editor.cursorStyle": "line",
  "editor.insertSpaces": true,
  "editor.lineNumbers": "on",
  "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
  "editor.wordWrap": "off",
  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  },
  "window.zoomLevel": 1,
  "markdown-preview-enhanced.scrollSync": true
}
